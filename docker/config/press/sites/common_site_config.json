{
  "db_host": "erp-saas-cloud-c16-mariadb",
  "db_port": 3306,
  "redis_cache": "redis://:${REDIS_PASSWORD}@erp-saas-cloud-c16-redis-cache:6379",
  "redis_queue": "redis://:${REDIS_PASSWORD}@erp-saas-cloud-c16-redis-queue:6379",
  "redis_socketio": "redis://:${REDIS_PASSWORD}@erp-saas-cloud-c16-redis-queue:6379",

  "socketio_port": 9000,
  "webserver_port": 8000,
  "file_watcher_port": 6787,

  "developer_mode": 0,
  "serve_default_site": true,
  "frappe_user": "frappe",

  "logging": {
    "log_level": "INFO",
    "log_to_console": true,
    "log_to_file": true
  },

  "background_workers": 4,
  "scheduler_interval": 60,

  "mail_server": "",
  "mail_port": 587,
  "use_ssl": 0,
  "use_tls": 1,
  "mail_login": "",
  "mail_password": "",
  "auto_email_id": "",

  "minio_endpoint": "erp-saas-cloud-c16-minio:9000",
  "minio_access_key": "${MINIO_ROOT_USER}",
  "minio_secret_key": "${MINIO_ROOT_PASSWORD}",
  "minio_bucket_files": "${MINIO_BUCKET_FILES:-erp-saas-cloud-c16-files}",
  "minio_bucket_backups": "${MINIO_BUCKET_BACKUPS:-erp-saas-cloud-c16-backups}",
  "use_minio_storage": true,

  "monitor_memory": true,
  "memory_threshold": 0.8,

  "press_selfhosted_mode": true,
  "cloud_provider": "selfhosted",

  "dns_multitenant": true,
  "host_name": "${PRESS_HOSTNAME:-press.platform.local}",

  "encryption_key": "${FRAPPE_ENCRYPTION_KEY}",

  "allow_cors": "*",
  "ignore_csrf": 0
}
